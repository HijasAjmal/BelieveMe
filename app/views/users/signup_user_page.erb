<div class="session">
  <div class="left">
    <?xml version="1.0" encoding="UTF-8"?>
    <svg enable-background="new 0 0 300 302.5" version="1.1" viewBox="0 0 300 302.5" xml:space="preserve" >
      <style type="text/css">
        .st01{fill:#fff;}
      </style>
      <path class="st01" d="m126 302.2c-2.3 0.7-5.7 0.2-7.7-1.2l-105-71.6c-2-1.3-3.7-4.4-3.9-6.7l-9.4-126.7c-0.2-2.4 1.1-5.6 2.8-7.2l93.2-86.4c1.7-1.6 5.1-2.6 7.4-2.3l125.6 18.9c2.3 0.4 5.2 2.3 6.4 4.4l63.5 110.1c1.2 2 1.4 5.5 0.6 7.7l-46.4 118.3c-0.9 2.2-3.4 4.6-5.7 5.3l-121.4 37.4zm63.4-102.7c2.3-0.7 4.8-3.1 5.7-5.3l19.9-50.8c0.9-2.2 0.6-5.7-0.6-7.7l-27.3-47.3c-1.2-2-4.1-4-6.4-4.4l-53.9-8c-2.3-0.4-5.7 0.7-7.4 2.3l-40 37.1c-1.7 1.6-3 4.9-2.8 7.2l4.1 54.4c0.2 2.4 1.9 5.4 3.9 6.7l45.1 30.8c2 1.3 5.4 1.9 7.7 1.2l52-16.2z"/>
    </svg>
  </div>
  <%= form_for @user, html: {class: "log-in"} do |f| %>
    <h4>SignUp with <span>BeMe</span></h4>
    <p>Explore the World of Programming!</p>
    <% if flash[:notice] %>
      <p align="center" style="color: green;"><%= flash[:notice] %></p>
    <% end %>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    <div class="floating-label">
      <div class="floating-label" style="width: 140px; float: left;">
        <%= f.text_field :first_name, placeholder: "First Name", class: 'input-label' %>
      </div>

      <div class="floating-label" style="width: 140px; float: left;">
        <%= f.text_field :middle_name, placeholder: "Middle Name", class: "input-label" %>
      </div>
    </div>

    <div class="floating-label">
      <%= f.text_field :last_name, placeholder: "Last Name", required: true, class: "input-label" %>
    </div>

    <div class="floating-label">
      <%= f.email_field :email, placeholder: "Email", required: true, class: "input-label" %>
    </div>

    <div class="floating-label">
      <div class="floating-label" style="width: 121px; float: left;">
        <%= f.password_field :password, placeholder: "Password", required: true, class: "input-label" %>
      </div>

      <div class="floating-label" style="width: 178px; float: left;">
        <%= password_field_tag :confirm_password, params[:confirm_password], placeholder: "Confirm Password", required: true, class: "input-label" %>
      </div>
    </div>

    <%= f.label :sudent, class: 'student' %>
    <%= f.check_box :student, {checked: true, class: "check-box-student check-box"} %>
    <%= f.label :teacher, class: 'teacher' %>
    <%= f.check_box :teacher, class: 'check-box-teacher check-box' %>
    <%= f.submit 'SignUp', class: 'submit-button' %>
    <%= link_to "SignIn?", signin_user_page_users_path, class: "discrete"%>
  <% end %>
</div>
<script type="text/javascript">
  $('input[type="checkbox"]').on('change', function() {
   $('input[type="checkbox"]').not(this).prop('checked', false);
});
</script>
